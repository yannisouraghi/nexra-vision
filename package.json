{
  "name": "nexra-vision",
  "version": "1.0.0",
  "description": "Game recorder for Nexra - AI-powered League of Legends analysis",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "author": "Nexra",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "electron-overlay-window": "^4.0.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.5"
  },
  "build": {
    "appId": "com.nexra.vision",
    "productName": "Nexra Vision",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/nexra-vision-ico.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/nexra-vision-ico.ico"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static",
        "to": "ffmpeg-static"
      },
      {
        "from": "node_modules/ffprobe-static",
        "to": "ffprobe-static"
      }
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nexra Vision"
    }
  }
}
